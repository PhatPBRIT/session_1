@model session_1.Models.Contact

<section class="form7 cid-tsJ8wGtENs" id="form7-q">
    <div class="container">
        <div class="mbr-section-head">
            <h3 class="mbr-section-title mbr-fonts-style align-center mb-0 display-2">
                <strong>Get in Touch</strong>
            </h3>
        </div>
        <div class="row justify-content-center mt-4">
            <div class="col-lg-8 mx-auto mbr-form">

                <form asp-controller="Contact" asp-action="Send" method="post" class="mbr-form form-with-styler mx-auto">
                    @Html.AntiForgeryToken()

                    <p class="mbr-text mbr-fonts-style align-center mb-4 display-7">
                        One of our team will be in contact with you shortly.
                    </p>

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="dragArea row">
                        <div class="col-lg-12 col-md-12 col-sm-12 form-group mb-3">
                            <input asp-for="Name" type="text" class="form-control" placeholder="Name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="col-lg-12 col-md-12 col-sm-12 form-group mb-3">
                            <input asp-for="Email" type="email" class="form-control" placeholder="Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="col-lg-12 col-md-12 col-sm-12 form-group mb-3">
                            <textarea asp-for="Message" class="form-control" rows="5" placeholder="Message"></textarea>
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>

                        <div class="col-auto mbr-section-btn align-center">
                            <button type="submit" class="btn btn-primary display-4">Send</button>
                        </div>
                    </div>

                    @if (ViewBag.SuccessMessage != null)
                    {
                        <div class="alert alert-success mt-4 text-center">@ViewBag.SuccessMessage</div>
                    }
                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger mt-4 text-center">@ViewBag.ErrorMessage</div>
                    }
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}