@model IEnumerable<session_1.Models.Product>

<div class="row mt-4">
    @if (Model != null && Model.Any())
    {
        @foreach (var item in Model)
        {
            <div class="item features-image col-12 col-md-6 col-lg-4">
                <div class="item-wrapper">
                    <div class="item-img">
                        <img src="@item.ImageUrl" alt="@item.Name" title="@item.Name" style="max-width: 100%; height: auto;" />
                    </div>
                    <div class="item-content">
                        <h6 class="item-subtitle mbr-fonts-style mt-1 display-7">
                            <strong>@item.Name</strong>
                        </h6>
                        <p class="mbr-text mbr-fonts-style mt-3 display-7">@item.Price.ToString("C")</p>
                    </div>
                    <div class="mbr-section-btn item-footer mt-2">
                        <a href="" class="btn item-btn btn-primary display-4" target="_self">
                            <span class="mbrib-cart-add mbr-iconfont mbr-iconfont-btn"></span>Add to cart
                        </a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <p class="mbr-text mbr-fonts-style align-center display-7">No products available at the moment.</p>
        </div>
    }
</div>